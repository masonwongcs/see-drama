html
    head
        include components/meta
        script(src="https://cdn.plyr.io/3.5.3/plyr.js")
        link(rel="stylesheet" href="https://cdn.plyr.io/3.5.3/plyr.css" )
        style.
            html, body {
                margin: 0;
                background: transparent;
            }
            video {
                width: 100%;
                /*height: 100%;*/
            }

            body {
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .plyr--video {
                width: 100%;
                height: 100%;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .plyr__video-wrapper {
                width: 100%;
            }

            .close-wrapper {
                position: fixed;
                height: 50px;
                width: 100vw;
                left: 0;
                top: 0;
                right: 0;
                z-index: 100;
                background: linear-gradient(to bottom, rgba(0,0,0,.7), rgba(0,0,0,0));
                transition: all 400ms cubic-bezier(0.4, 0, 0.2, 1);
            }

            .close-wrapper.hide {
                transform: translateY(-100%);
                opacity: 0;
            }

            .close {
                position: absolute;
                top: 25%;
                left: 3%;
                font-size: 1.2rem;
                color: #fff;
                text-decoration: none;
                display: flex;
                align-items: center;
                justify-content: center;
                background: transparent;
                text-shadow: 0 0 0 8px rgba(0,0,0,0.8);
            }

            .channel-list-wrapper {
                /*display: flex;*/
                /*align-items: center;*/
                /*justify-content: center;*/
            }

            .channel-item {
                display: flex;
                height: 40px;
                border: 1px solid #fff;
                flex-grow: 1;
                margin: auto;
                align-items: center;
                justify-content: center;
                color: #fff;
                font-size: 1rem;
                padding: 0 20px;
                text-decoration: none;
            }

            .channel-item:not(:last-child) {
                margin-bottom: 8px;
            }
    body
        .close-wrapper
            a.close(href="#!") <i class="fas fa-chevron-left"></i>&nbsp;Back
        script.
            $(".close").click(function (e) {
                e.preventDefault();
                window.top.postMessage('close', '*');
            })
        if channel
            .channel-list-wrapper
                for items in content
                    a.channel-item(href="/video?" + items.url )= items.title

        else
            video#player(poster='/path/to/poster.jpg', playsinline='false', controls='', autoplay)
                source(src="", type='video/mp4')
                //source(src='/path/to/video.webm', type='video/webm')
                // Captions are optional
                track(kind='captions', label='English captions', src='/path/to/captions.vtt', srclang='en', default='')
            script.
                const video = !{content}
                console.log(video)
                if(!!navigator.platform && /iPad|iPhone|iPod/.test(navigator.platform)) {
                    $('#player source').attr('src', video[1].url)
                } else {
                    const player = new Plyr('#player');
                    player.source = {
                        type: 'video',
                        title: 'Example title',
                        sources: [
                            {
                                src: video[0].url,
                                type: 'video/mp4',
                                size: 360,
                            },
                            {
                                src: video[1].url,
                                type: 'video/mp4',
                                size: 720,
                            }
                        ],
                    }
                    player.on('controlshidden', function (event) {
                        // const instance = event.detail.plyr;
                        $('.close-wrapper').addClass('hide');
                    })
                    player.on('controlsshown', function (event) {
                        // const instance = event.detail.plyr;
                        $('.close-wrapper').removeClass('hide');
                    })

                }


