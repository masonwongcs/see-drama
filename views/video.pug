            .close {
                position: fixed;
                top: 10px;
                left: 10px;
                width: 4rem;
                font-size: 4rem;
                color: #fff;
                height: 4rem;
                text-decoration: none;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .channel-list-wrapper {
                /*display: flex;*/
                /*align-items: center;*/
                /*justify-content: center;*/
            }

            .channel-item {
                display: flex;
                height: 40px;
                border: 1px solid #fff;
                flex-grow: 1;
                margin: auto;
                align-items: center;
                justify-content: center;
                color: #fff;
                font-size: 1rem;
                padding: 0 20px;
                text-decoration: none;
            }

            .channel-item:not(:last-child) {
                margin-bottom: 8px;
            }
